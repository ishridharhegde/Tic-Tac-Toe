<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.shridhar.tictactoe.MainOptions">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY"
        />


<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerDetails"
        android:textSize="25dp"
        android:text="Player details:"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player1"
        android:textSize="20dp"
        android:text="Player 1:"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/playerDetails"

        android:layout_marginTop="40dp"
        />

    <EditText
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/roundedtext"
    android:layout_weight=".75"
    android:layout_below="@+id/player1"
    android:id="@+id/player1name"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="25dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player2"
        android:textSize="20dp"
        android:text="Player 2:"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/player1name"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/roundedtext"
        android:layout_weight=".75"
        android:layout_below="@+id/player2"
        android:id="@+id/player2name"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="25dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/playbutton"

        android:text="PLAY"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonborder"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerInParent="true"
        android:onClick="playTheGame"
        android:layout_below="@+id/player2name"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>


   </RelativeLayout>


