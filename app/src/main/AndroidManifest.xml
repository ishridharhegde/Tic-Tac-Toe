<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shridhar.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tictactoe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tictactoe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <activity
            android:name=".MainOptions"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_options"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".PlayersName"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".howToPlay" />
        <activity android:name=".about" />
        <activity android:name=".FourGridScreen" />
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainOptions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shridhar.tictactoe.MainOptions" />
        </activity>
    </application>

</manifest>